@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/Login.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="wrapper">        @*fadeInDown*@
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="first">                @*fadeInDown*@
                <img src="~/Images/Logo.png" id="icon" alt="User Icon" />
            </div>
            <!-- Login Form -->
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />                
                <div class="form-group">
                    <input asp-for="Input.Email" class="second" placeholder="login" /><br />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="third" placeholder="password" /><br />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" class="fourth" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="fourth">Log in</button><br />
                    <span class="text-danger">@Model.ErrorMessage</span>
                </div>
                <div id="formFooter">
                    <a id="forgot-password" class="" asp-page="./ForgotPassword">Forgot your password?</a>  <br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
            </form>
            <!-- Remind Passowrd -->

        </div>
    </div>
</body>
</html>

